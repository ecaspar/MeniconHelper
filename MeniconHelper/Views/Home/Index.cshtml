
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    @Styles.Render("~/Content/Styles/home.css")
</head>
<body>
    <header>
        <div class="logo"><img src="../Content/Images/Logo.png" /></div>
        <div><h1>Menicon Helper</h1></div>
        <div class="menu">
            <ul>
                <li>Home</li>
                <li>Mon compte</li>
                <li>Déconnexion</li>
            </ul>
        </div>
    </header>
    <div> 
        <table border="1">
            <thead>
                <tr>
                    <th>Référence</th>
                    <th>Photo</th>
                    <th>Description</th>
                    <th>Superviseur</th>
                    <th>Date</th>
                    <th>Déclarant</th>
                    <th>Type</th>
                    <th>Ligne</th>
                    <th>Machine</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in ViewBag.Incident)
                {
                <tr>
                    <td class="reference">@x.Reference</td>
                    <td class="image"><img src="@x.Image" /></td>
                    <td class="description">@x.Description</td>
                    <td class="supervisor">@x.Supervisor</td>
                    <td class="date">@x.Date</td>
                    <td class="declarant">@x.Declarant</td>
                    <td class="type">@x.Type</td>
                    <td class="area">@x.Area</td>
                    <td class="engine">@x.Engine</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
